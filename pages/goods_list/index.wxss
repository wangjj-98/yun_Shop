/* pages/goods_list/index.wxss */
.first_tab .goods_item {
  display: flex;
  border-bottom: 1px solid #ccc;
}
.first_tab .goods_item .left {
  flex: 4;
  display: flex;
  justify-content: center;
  align-items: center;
}
.first_tab .goods_item .left image {
  width: 80%;
}
.first_tab .goods_item .right {
  flex: 6;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.first_tab .goods_item .right .goods_title {
  padding: 20rpx 10rpx 0 0;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.first_tab .goods_item .right .goods_price {
  padding-bottom: 10rpx;
  color: var(--themeColor);
  font-size: 36rpx;
}
