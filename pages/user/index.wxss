/* pages/user/index.wxss */
page {
  background-color: #f5f5f5;
  color: #666;
}
.user_info_wrap {
  height: 40vh;
  overflow: hidden;
  background-color: var(--themeColor);
  position: relative;
}
.user_info_wrap .user_img_wrap {
  position: relative;
}
.user_info_wrap .user_img_wrap .user_bg {
  width: 100%;
  height: 40vh;
  filter: blur(5rpx);
}
.user_info_wrap .user_img_wrap .user_info {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 30%;
  text-align: center;
}
.user_info_wrap .user_img_wrap .user_info .user_icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.user_info_wrap .user_img_wrap .user_info .user_name {
  padding: 40rpx 0;
  color: #fff;
}
.user_info_wrap button {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 40%;
  width: 70%;
}
.user_content {
  position: relative;
}
.user_content .user_main {
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  top: -30rpx;
}
.user_content .user_main .history_wrap {
  background-color: #fff;
  display: flex;
  padding: 10rpx 0;
}
.user_content .user_main .history_wrap navigator {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
}
.user_content .user_main .history_wrap navigator .his_num {
  color: var(--themeColor);
}
.user_content .user_main .history_wrap navigator .his_name {
  color: #666;
}
.user_content .user_main .orders_wrap {
  margin-top: 20rpx;
  background-color: #fff;
}
.user_content .user_main .orders_wrap .orders_title {
  border-bottom: 1px solid #ccc;
  padding: 20rpx;
}
.user_content .user_main .orders_wrap .orders_content {
  display: flex;
  padding: 10rpx 0;
}
.user_content .user_main .orders_wrap .orders_content navigator {
  flex: 1;
  text-align: center;
}
.user_content .user_main .orders_wrap .orders_content navigator .iconfont {
  color: var(--themeColor);
}
.user_content .user_main .orders_wrap .orders_content navigator .orders_name {
  color: #666;
  font-size: 24rpx;
}
.user_content .user_main .address_wrap {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 20rpx;
}
.user_content .user_main .app_info_wrap {
  background-color: #fff;
  margin-top: 20rpx;
}
.user_content .user_main .app_info_wrap .app_info_item {
  padding: 20rpx;
  border-bottom: 2rpx solid #ccc;
}
.user_content .user_main .app_info_wrap .app_info_item:nth-child(1) {
  display: flex;
  justify-content: space-between;
}
.user_content .user_main .share_wrap {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 20rpx;
  position: relative;
}
.user_content .user_main .share_wrap .sharebtn {
  width: 100%;
  height: 100%;
  opacity: 0;
  position: absolute;
  top: 0;
  right: 0;
}
